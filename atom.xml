+++ b/checkpoint3/server.c
@@ -769,7 +769,7 @@ int main(int argc, char* argv[])
                 {
                     if (conn_set[c].file_read &amp;&amp; !conn_set[c].send_buf.num_vali
                     {
-                        //FD_CLR(conn_set[c].fd, &amp;write_fds_save);
+                        FD_CLR(conn_set[c].fd, &amp;write_fds_save);
